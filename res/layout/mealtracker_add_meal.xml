                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white"
                        android:text="View"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



