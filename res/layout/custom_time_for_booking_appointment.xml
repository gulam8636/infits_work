<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_time"
    android:layout_width="286dp"
    android:layout_height="252dp"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:id="@+id/close_time_for_booking"-->
<!--            android:layout_width="13dp"-->
<!--            android:layout_height="13dp"-->
<!--            android:layout_marginStart="136dp"-->
<!--            android:layout_marginTop="22dp"-->
<!--            android:src="@drawable/close_custom_time" />-->

        <TextView
            android:id="@+id/date_year_custom_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="Tuesday, March 4, 2023"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:fontFamily="@font/nats_regular"
            android:layout_marginTop="-10dp"
            android:text="Select a custom time"
            android:textAlignment="center"
            android:textColor="#C4C4C4"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="52dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hours_up"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/top_arrow_for_time" />

                <FrameLayout
                    android:id="@+id/hours_time"
                    android:layout_width="51dp"
                    android:layout_height="33dp"
                    android:background="@drawable/rounded_background_grey_for_time">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hours_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        />

<!--                    <TextView-->
<!--                        android:id="@+id/hours_textView"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="-12dp"-->
<!--                        android:fontFamily="@font/nats_regular"-->
<!--                        android:gravity="center|top"-->
<!--                        android:text="09"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="26sp" />-->

                </FrameLayout>

                <ImageView
                    android:id="@+id/hours_down"
                    android:layout_width="11dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/bottom_arrow_for_time" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="52dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="7dp"
                    android:layout_height="38dp"
                    android:text=":"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="24sp"
                    android:textColor="#004EAD"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="52dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/min_up"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/top_arrow_for_time" />

                <FrameLayout
                    android:id="@+id/minute_time"
                    android:layout_width="51dp"
                    android:layout_height="33dp"
                    android:background="@drawable/rounded_background_grey_for_time">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/min_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        />
<!--                    <TextView-->
<!--                        android:id="@+id/minute_textView"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_marginTop="-12dp"-->
<!--                        android:fontFamily="@font/nats_regular"-->
<!--                        android:gravity="center|top"-->
<!--                        android:text="00"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="26sp" />-->

                </FrameLayout>

                <ImageView
                    android:id="@+id/min_down"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/bottom_arrow_for_time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="52dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="8dp" />

                <FrameLayout
                    android:id="@+id/am_or_pm"
                    android:layout_width="51dp"
                    android:layout_height="33dp"
                    android:background="@drawable/rounded_background_grey_for_time">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/timing_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        />

                </FrameLayout>

                <ImageView
                    android:id="@+id/am_pm_down"
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/bottom_arrow_for_time" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="23dp">

            <FrameLayout
                android:id="@+id/custom_time_cancel_btn"
                android:layout_width="98dp"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background_appointment_white_btn">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nats_regular"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#4B9AFB"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/custom_time_confirm_btn"
                android:layout_width="98dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_background_appointment_btn">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nats_regular"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>